<%= render 'shared/notification' %>

<div class="flex flex-row items-center gap-4">
  <p class="text-xl font-semibold text-gray-400 flex-0">Transaction History</p>
  <div class="flex-grow border-b"></div>
</div>

<div class="mt-4 bg-white border grid grid-cols-1 divide-y">
  <% @transactions.each do |transaction| %>
    <div class="flex items-center justify-between p-5">
      <div class="flex gap-5">
        <div class="flex items-center justify-center bg-blue-400 rounded-full" style="width: 50px; height: 50px;">
          <p class="font-semibold text-white"><%= generate_transaction_icon transaction.title %></p>
        </div>

        <div class="flex flex-col gap-1">
          <p class="font-sans text-lg font-bold"><%= transaction.title %></p>
          <p class="font-sans text-gray-400 text-md"><%= l transaction.created_at, format: :short %></p>
        </div>
      </div>

      <div class="flex flex-col items-end gap-1">
        <p class="font-sans text-lg font-bold <%= transaction.type == 'income' ? 'text-green-500' : 'text-red-500' %>"><%= currency_idr_format transaction.price %></p>
        <p class="font-sans text-gray-400 text-md"><%= transaction.type.capitalize %></p>
      </div>
    </div>
  <% end %>
</div>
