<div class="flex flex-col gap-2">
  <h1 class="font-bold text-xl">Add Transaction</h1>
  <p class="text-gray-400 text-base">Record a new transaction by filling this form.</p>
</div>

<%= form_with model: @transaction, method: :post, class: 'flex flex-col gap-6 mt-6 bg-white p-6' do |form| %>
  <div class="flex flex-col gap-2">
    <%= form.label :title, 'Title', class: 'font-bold' %>
    <%= form.text_field :title, placeholder: 'Enter title', class: 'bg-gray-100 border-0' %>
  </div>

  <div class="flex flex-col gap-2">
    <%= form.label :price, 'Price', class: 'font-bold' %>
    <%= form.text_field :price, placeholder: 'Enter price', class: 'bg-gray-100 border-0' %>
  </div>

  <div class="flex flex-col gap-2">
    <p class="font-bold">Transaction Type</p>
    <div class="flex flex-col gap-2">
      <div id="option_outcome" class="flex items-center gap-1 border p-3 border-indigo-500">
        <%= form.radio_button :type, 'income', class: 'text-indigo-500 focus:border-0', checked: true %>
        <%= form.label :type_income, 'Income' %>
      </div>
      <div id="option_outcome" class="flex items-center gap-1 border p-3">
        <%= form.radio_button :type, 'outcome', class: 'text-indigo-500' %>
        <%= form.label :type_outcome, 'Outcome' %>
      </div>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <%= form.label :categories, class: 'font-bold' %>
    <%= form.select :categories, [['Needs', 'needs'], ['Wants', 'wants'], ['Invest', 'invest']], {}, { class: 'bg-gray-100 border-0' } %>
  </div>

  <div class="flex flex-col gap-2">
    <%= form.label :notes, 'Notes', class: 'font-bold' %>
    <%= form.text_area :notes, placeholder: 'Enter a description', class: 'bg-gray-100 border-0 h-40' %>
  </div>

  <%= form.submit 'Submit', class: 'p-3 font-bold text-white bg-indigo-500 cursor-pointer' %>
<% end %>
